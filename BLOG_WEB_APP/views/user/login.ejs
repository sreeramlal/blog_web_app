<!DOCTYPE html>
 <html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/css/user-login.css">
  </head>
  <body>
    <div class="center">
      <h1>Login</h1>

      <form action="/user/login" method="POST">
        <div class="txt_field">
          <input type="email" name="sp_id" required>
          <span></span>
          <label>Email ID</label>
        </div>
        <div class="txt_field">
          <input name="sp_password" type="password" required>
          <span></span>
          <label>Password</label>
        </div>
         <input type="submit" value="Login">
        <div class="signup_link">
          Not a member? <a href="/user/signup">Signup</a>
        </div>
      </form>
    </div>

  </body>
</html>
